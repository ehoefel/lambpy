#footer {
  margin-left: 1;
  padding-top: 1;
  dock: bottom;
  height: 4;
  width: 100%;
  layout: grid;
  grid-size: 2;
  grid-columns: auto auto;
  grid-gutter: 1;
}

#next {
  dock: left;
  min-width: 8;
}

#save {
  dock: right;
  min-width: 8;
}

#rules {
  dock: right;
  width: 40%;
  height: 100%;
  margin-right: 1;
}

Modal {
  align: center middle;
  height: 50%;
}

Modal Form {
  align: center middle;
  width: 50%;
  height: auto;
  border: tall;
  background-tint: white 20%;
}

Form Grid {
  grid-size: 2;
  grid-columns: auto 1fr;
  grid-rows: 3;
  height: auto;
  width: 100%;
  grid-gutter: 1;
}

Form Grid Label {
  padding-left: 3;
  padding-top: 1;
  padding-bottom: 1;
  text-align: right;
  width: 100%;
  min-width: 5;
  text-style: bold;
}

Form Grid Input {
  border-top: tall $surface-lighten-1;
  border-bottom: tall $surface-darken-1;
  border-left: none;
  border-right: none;
  margin-right: 1;
}

Form .right_button {
  height: 4;
  align: right bottom;
  padding-right: 1;

}
