Screen {
  height: 100%;
  layout: grid;
  grid-size: 1;
}

#header {
  dock: top;
  height: 5;
  width: 100%;
  layout: grid;
  grid-size: 5;
  padding: 1 1;
  grid-columns: auto auto 1fr auto auto;
  grid-gutter: 1;
}

#logo {
  width: 1;
  color: green;
  text-style: bold;
  margin-top: 1;
}

#title {
  margin-top: 1;
  height: 1;
  text-style: bold;
}

#subtitle {
  margin-top: 1;
  height: 1;
  color: gray;
}

#info {
  min-width: 10;
}

#help {
  min-width: 10;
}

#body {
  layout: grid;
  grid-size: 2;
  grid-columns: 1fr auto;
  grid-gutter: 1;
  margin-bottom: 1;
}

#body2 {
  layout: grid;
  grid-size: 1;
}

Input.-valid {
  border: tall $success 60%;
}

#input_area {
  dock: top;
  height: 4;
  width: 100%;
  layout: grid;
  grid-size: 2;
  grid-columns: 1fr auto;
  grid-gutter: 1;
}

#run {
  dock: right;
  min-width: 7;
}

#reduction_steps {
  margin-left: 1;
}

#reduction_steps ListItem {
  background: transparent;
}

Executable {
  height: auto;
  width: 100%;
  layout: grid;
  grid-size: 2;
  grid-columns: auto 4;


  * {
    height: auto;
    width: auto;
  }

  Application.executable {
    & > Horizontal > Horizontal > Abstraction.exp1 > Horizontal {
      & > .lambda {
        text-style: bold;
        color: springgreen;
      }

      & > Variable {
        text-style: bold;
        color: springgreen;
      }

      .destination {
        color: springgreen;
        text-style: bold reverse;
      }
    }
    & > Horizontal > .exp2 {
        text-style: underline bold;
    }
  }

  Rule Label {
    color: gold;
  }

  Rule.executable Label {
    text-style: bold reverse;
  }

  .reduction_type {
    dock: right;
    text-style: bold;

    .therefore {
      margin-right: 1;
    }

    .operation {
      margin-right: 1;
      &.beta {
        color: springgreen;
      }
      &.delta {
        color: gold;
      }
    }
  }
}



#rules {

  Label.title {
    border-top: tall $surface-lighten-1;
    text-align: center;
    width: 100%;
    background: ansi_black;
    border-bottom: heavy $surface-darken-1;
  }

  Rule {
    width: 100%;
    height: 1;
    background: $surface;

    .name {
      padding-left: 1;
    }

    .equals {
      padding: 0 1;
    }

    .value {
      text-style: italic;
    }

  }
}

