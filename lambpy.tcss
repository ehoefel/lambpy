Screen {
  height: 100%;
  layout: grid;
  grid-size: 1;
}

#header {
  dock: top;
  height: 5;
  width: 100%;
  layout: grid;
  grid-size: 5;
  padding: 1 1;
  grid-columns: auto auto 1fr auto auto;
  grid-gutter: 1;
}

#logo {
  width: 1;
  color: green;
  text-style: bold;
  margin-top: 1;
}

#title {
  margin-top: 1;
  height: 1;
  text-style: bold;
}

#subtitle {
  margin-top: 1;
  height: 1;
  color: gray;
}

#info {
  min-width: 10;
}

#help {
  min-width: 10;
}

#body {
  layout: grid;
  grid-size: 2;
  grid-columns: 1fr auto;
  grid-gutter: 1;
  margin-bottom: 1;
}

#body2 {
  layout: grid;
  grid-size: 1;
}

#input_area {
  dock: top;
  height: 4;
  width: 100%;
  layout: grid;
  grid-size: 2;
  grid-columns: 1fr auto;
  grid-gutter: 1;
}

#run {
  dock: right;
  min-width: 7;
}

#reduction_steps {
  padding: 1;
}

#reduction_steps ListItem {
  margin-bottom: 1;
}

#rules Label {
  border-top: tall $surface-lighten-1;
  text-align: center;
  width: 100%;
  background: ansi_black;
  border-bottom: heavy $surface-darken-1;
}

#rules Rule {
  width: 100%;
  text-align: left;
  height: 2;
  color: $button-foreground;
  background: $surface;
  border: none;
  outline-bottom: heavy gray;
  padding-left: 1;
  text-style: italic;
}

#footer {
  padding-top: 1;
  dock: bottom;
  height: 4;
  width: 100%;
  layout: grid;
  grid-size: 2;
  grid-columns: auto auto;
  grid-gutter: 1;
}

#next {
  dock: left;
  min-width: 8;
}

#save {
  dock: right;
  min-width: 8;
}

#rules {
  dock: right;
  width: 30;
  height: 100%;
}

Modal {
  align: center middle;
  height: 50%;
}

Modal Form {
  align: center middle;
  width: 50%;
  height: auto;
  border: tall;
  background-tint: white 20%;
}

Form Grid {
  grid-size: 2;
  grid-columns: auto 1fr;
  grid-rows: 3;
  height: auto;
  width: 100%;
  grid-gutter: 1;
}

Form Grid Label {
  padding-left: 3;
  padding-top: 1;
  padding-bottom: 1;
  text-align: right;
  width: 100%;
  min-width: 5;
  text-style: bold;
}

Form Grid InputField {
  border-top: tall $surface-lighten-1;
  border-bottom: tall $surface-darken-1;
  border-left: none;
  border-right: none;
  margin-right: 1;
}
